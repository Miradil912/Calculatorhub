    <!-- JavaScript for 3D Effects and PDF Functionality -->
    <script>
        // Three.js Background Animation
        function initThreeJS() {
            const scene = new THREE.Scene();
            const camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
            const renderer = new THREE.WebGLRenderer({ alpha: true });
            renderer.setSize(window.innerWidth, window.innerHeight);
            document.getElementById('threejs-bg').appendChild(renderer.domElement);

            // Create floating geometric shapes
            const geometry = new THREE.IcosahedronGeometry(1, 0);
            const material = new THREE.MeshBasicMaterial({ 
                color: 0x6366f1, 
                wireframe: true,
                transparent: true,
                opacity: 0.1
            });

            const shapes = [];
            for (let i = 0; i < 15; i++) {
                const shape = new THREE.Mesh(geometry, material);
                shape.position.x = Math.random() * 20 - 10;
                shape.position.y = Math.random() * 20 - 10;
                shape.position.z = Math.random() * 10 - 20;
                shape.scale.setScalar(Math.random() * 2 + 0.5);
                shapes.push(shape);
                scene.add(shape);
            }

            camera.position.z = 5;

            function animate() {
                requestAnimationFrame(animate);
                
                shapes.forEach((shape, index) => {
                    shape.rotation.x += 0.005;
                    shape.rotation.y += 0.008;
                    shape.position.y += Math.sin(Date.now() * 0.001 + index) * 0.005;
                });

                renderer.render(scene, camera);
            }
            animate();

            window.addEventListener('resize', () => {
                camera.aspect = window.innerWidth / window.innerHeight;
                camera.updateProjectionMatrix();
                renderer.setSize(window.innerWidth, window.innerHeight);
            });
        }

        // Initialize Three.js
        initThreeJS();

        // PDF Tools State Management
        let currentPDFTool = 'image-to-pdf';
        let selectedFiles = [];
        let compressionLevel = 'medium';

        // Initialize PDF Tool Buttons
        document.querySelectorAll('.pdf-tool-btn').forEach(button => {
            button.addEventListener('click', function() {
                document.querySelectorAll('.pdf-tool-btn').forEach(btn => {
                    btn.classList.remove('bg-gradient-to-r', 'from-indigo-600', 'to-purple-600', 'text-white');
                    btn.classList.add('glass-morphism', 'text-gray-700');
                });
                
                this.classList.add('bg-gradient-to-r', 'from-indigo-600', 'to-purple-600', 'text-white');
                this.classList.remove('glass-morphism', 'text-gray-700');
                
                currentPDFTool = this.id.replace('-btn', '');
                updateToolInterface();
            });
        });

        // Initialize Compression Level Buttons
        document.querySelectorAll('.compression-level-btn').forEach(button => {
            button.addEventListener('click', function() {
                document.querySelectorAll('.compression-level-btn').forEach(btn => {
                    btn.classList.remove('bg-gradient-to-r', 'from-indigo-600', 'to-purple-600', 'text-white');
                    btn.classList.add('glass-morphism', 'text-gray-700');
                });
                
                this.classList.add('bg-gradient-to-r', 'from-indigo-600', 'to-purple-600', 'text-white');
                this.classList.remove('glass-morphism', 'text-gray-700');
                
                compressionLevel = this.getAttribute('data-level');
            });
        });

        // Update interface based on selected tool
        function updateToolInterface() {
            const uploadInstruction = document.getElementById('upload-instruction');
            const supportedFormats = document.getElementById('supported-formats');
            const processButton = document.getElementById('process-button');
            const compressionOptions = document.getElementById('compression-options');
            const splitOptions = document.getElementById('split-options');
            const resultTitle = document.getElementById('result-title');
            const fileInput = document.getElementById('file-upload-input');
            
            compressionOptions.classList.add('hidden');
            splitOptions.classList.add('hidden');
            fileInput.accept = '';
            
            switch(currentPDFTool) {
                case 'image-to-pdf':
                    uploadInstruction.textContent = 'Drag & drop your images here or';
                    supportedFormats.textContent = 'JPG, PNG, GIF, BMP, TIFF';
                    processButton.textContent = 'Convert to PDF';
                    resultTitle.textContent = 'PDF Conversion Result';
                    fileInput.accept = 'image/*';
                    fileInput.multiple = true;
                    break;
                    
                case 'pdf-to-image':
                    uploadInstruction.textContent = 'Drag & drop your PDF file here or';
                    supportedFormats.textContent = 'PDF';
                    processButton.textContent = 'Convert to Images';
                    resultTitle.textContent = 'Image Conversion Result';
                    fileInput.accept = '.pdf';
                    fileInput.multiple = false;
                    break;
                    
                case 'compress-pdf':
                    uploadInstruction.textContent = 'Drag & drop your PDF file here or';
                    supportedFormats.textContent = 'PDF';
                    processButton.textContent = 'Compress PDF';
                    resultTitle.textContent = 'Compression Result';
                    compressionOptions.classList.remove('hidden');
                    fileInput.accept = '.pdf';
                    fileInput.multiple = false;
                    break;
                    
                case 'split-pdf':
                    uploadInstruction.textContent = 'Drag & drop your PDF file here or';
                    supportedFormats.textContent = 'PDF';
                    processButton.textContent = 'Split PDF';
                    resultTitle.textContent = 'Split Result';
                    splitOptions.classList.remove('hidden');
                    fileInput.accept = '.pdf';
                    fileInput.multiple = false;
                    break;
            }
            
            document.getElementById('file-list').classList.add('hidden');
            selectedFiles = [];
        }

        // Handle file selection
        document.getElementById('file-upload-input').addEventListener('change', function(e) {
            selectedFiles = Array.from(e.target.files);
            updateFileList();
        });

        // Update file list display
        function updateFileList() {
            const fileListContainer = document.getElementById('file-list');
            
            if (selectedFiles.length === 0) {
                fileListContainer.classList.add('hidden');
                return;
            }
            
            fileListContainer.classList.remove('hidden');
            fileListContainer.innerHTML = '<h4 class="font-semibold text-gray-700 mb-2">Selected Files:</h4>';
            
            selectedFiles.forEach((file, index) => {
                const fileItem = document.createElement('div');
                fileItem.className = 'flex justify-between items-center text-sm bg-white/50 p-2 rounded-lg';
                fileItem.innerHTML = `
                    <span class="truncate flex-1">${file.name}</span>
                    <span class="text-gray-500 ml-2">(${(file.size / 1024 / 1024).toFixed(2)} MB)</span>
                    <button onclick="removeFile(${index})" class="ml-2 text-red-500 hover:text-red-700">×</button>
                `;
                fileListContainer.appendChild(fileItem);
            });
        }

        // Remove file from selection
        function removeFile(index) {
            selectedFiles.splice(index, 1);
            updateFileList();
        }

        // Handle drag and drop
        const fileDropZone = document.getElementById('file-upload-section');
        fileDropZone.addEventListener('dragover', function(e) {
            e.preventDefault();
            this.classList.add('border-indigo-500', 'bg-indigo-50/30');
        });

        fileDropZone.addEventListener('dragleave', function(e) {
            e.preventDefault();
            this.classList.remove('border-indigo-500', 'bg-indigo-50/30');
        });

        fileDropZone.addEventListener('drop', function(e) {
            e.preventDefault();
            this.classList.remove('border-indigo-500', 'bg-indigo-50/30');
            
            const files = Array.from(e.dataTransfer.files);
            selectedFiles = files;
            updateFileList();
        });

        // Process the PDF action based on selected tool
        async function processPDFAction() {
            if (selectedFiles.length === 0) {
                alert('Please select at least one file');
                return;
            }
            
            const resultDiv = document.getElementById('conversion-result');
            const downloadSection = document.getElementById('download-section');
            const multipleDownloads = document.getElementById('multiple-downloads');
            
            downloadSection.classList.add('hidden');
            multipleDownloads.classList.add('hidden');
            resultDiv.textContent = 'Processing your files...';
            
            try {
                switch(currentPDFTool) {
                    case 'image-to-pdf':
                        await handleImageToPDF();
                        break;
                    case 'pdf-to-image':
                        await handlePDFToImage();
                        break;
                    case 'compress-pdf':
                        await handlePDFCompression();
                        break;
                    case 'split-pdf':
                        await handlePDFSplit();
                        break;
                }
            } catch (error) {
                resultDiv.textContent = 'Error processing files: ' + error.message;
            }
        }

        // Handle Image to PDF conversion
        async function handleImageToPDF() {
            const { PDFDocument } = PDFLib;
            const pdfDoc = await PDFDocument.create();
            
            for (const file of selectedFiles) {
                const imgUrl = URL.createObjectURL(file);
                const img = new Image();
                
                await new Promise((resolve) => {
                    img.onload = resolve;
                    img.src = imgUrl;
                });
                
                const page = pdfDoc.addPage([img.width, img.height]);
                const embeddedImage = await pdfDoc.embedPng(imgUrl);
                page.drawImage(embeddedImage, {
                    x: 0,
                    y: 0,
                    width: img.width,
                    height: img.height,
                });
                
                URL.revokeObjectURL(imgUrl);
            }
            
            const pdfBytes = await pdfDoc.save();
            const pdfBlob = new Blob([pdfBytes], { type: 'application/pdf' });
            
            displayResult(`Successfully converted ${selectedFiles.length} images to PDF`, pdfBlob, 'converted.pdf');
        }

        // Handle PDF to Image conversion (simulated)
        async function handlePDFToImage() {
            const resultDiv = document.getElementById('conversion-result');
            const downloadSection = document.getElementById('download-section');
            
            resultDiv.textContent = `PDF to Image conversion would extract pages as images. In a full implementation, this would use a PDF rendering library.`;
            downloadSection.classList.remove('hidden');
            
            document.getElementById('download-button').onclick = function() {
                alert('Full PDF to Image conversion requires additional libraries like pdf.js for complete implementation');
            };
        }

        // Handle PDF compression (simulated)
        async function handlePDFCompression() {
            const resultDiv = document.getElementById('conversion-result');
            const downloadSection = document.getElementById('download-section');
            const fileSizeInfo = document.getElementById('file-size-info');
            
            const originalSize = selectedFiles[0].size;
            let compressionRatio;
            
            switch(compressionLevel) {
                case 'low': compressionRatio = 0.8; break;
                case 'medium': compressionRatio = 0.6; break;
                case 'high': compressionRatio = 0.4; break;
            }
            
            const compressedSize = originalSize * compressionRatio;
            
            resultDiv.textContent = `Successfully compressed PDF file`;
            fileSizeInfo.textContent = `Original: ${(originalSize / 1024 / 1024).toFixed(2)} MB → Compressed: ${(compressedSize / 1024 / 1024).toFixed(2)} MB (${((1-compressionRatio)*100).toFixed(0)}% reduction)`;
            downloadSection.classList.remove('hidden');
            
            document.getElementById('download-button').onclick = function() {
                alert('Full PDF compression implementation requires advanced PDF processing libraries');
            };
        }

        // Handle PDF splitting (simulated)
        async function handlePDFSplit() {
            const resultDiv = document.getElementById('conversion-result');
            const downloadSection = document.getElementById('download-section');
            const multipleDownloads = document.getElementById('multiple-downloads');
            
            const splitMethod = document.querySelector('input[name="split-method"]:checked').value;
            
            if (splitMethod === 'all') {
                resultDiv.textContent = `Split PDF into multiple individual pages`;
                multipleDownloads.classList.remove('hidden');
            } else {
                resultDiv.textContent = 'Extracted specified page range from PDF';
                downloadSection.classList.remove('hidden');
            }
            
            document.getElementById('download-button').onclick = function() {
                alert('Full PDF splitting implementation requires PDF manipulation libraries with page extraction capabilities');
            };
        }

        // Display result and download link
        function displayResult(message, blob, filename) {
            const resultDiv = document.getElementById('conversion-result');
            const downloadSection = document.getElementById('download-section');
            const downloadButton = document.getElementById('download-button');
            const fileSizeInfo = document.getElementById('file-size-info');
            
            resultDiv.textContent = message;
            fileSizeInfo.textContent = `File size: ${(blob.size / 1024 / 1024).toFixed(2)} MB`;
            downloadSection.classList.remove('hidden');
            
            downloadButton.onclick = function() {
                download(blob, filename, 'application/pdf');
            };
        }

        // Existing calculator functions (unchanged)
        function calculateAge() {
            const dobInput = document.getElementById('dob').value;
            if (!dobInput) {
                document.getElementById('age-result').textContent = 'Please enter your date of birth';
                return;
            }

            const dob = new Date(dobInput);
            const today = new Date();
            
            if (dob > today) {
                document.getElementById('age-result').textContent = 'Invalid date of birth (future date)';
                document.getElementById('age-breakdown').classList.add('hidden');
                return;
            }

            let years = today.getFullYear() - dob.getFullYear();
            let months = today.getMonth() - dob.getMonth();
            let days = today.getDate() - dob.getDate();

            if (days < 0) {
                months--;
                const prevMonth = new Date(today.getFullYear(), today.getMonth(), 0);
                days += prevMonth.getDate();
            }

            if (months < 0) {
                years--;
                months += 12;
            }

            document.getElementById('age-result').textContent = `You are ${years} years, ${months} months, and ${days} days old`;
            document.getElementById('years').textContent = years;
            document.getElementById('months').textContent = months;
            document.getElementById('days').textContent = days;
            document.getElementById('age-breakdown').classList.remove('hidden');
        }

        function calculateEMI() {
            const principal = parseFloat(document.getElementById('loan-amount').value);
            const annualRate = parseFloat(document.getElementById('interest-rate').value);
            const years = parseFloat(document.getElementById('loan-tenure').value);

            if (!principal || !annualRate || !years) {
                document.getElementById('emi-result').textContent = 'Please enter all loan details';
                return;
            }

            const monthlyRate = annualRate / 12 / 100;
            const months = years * 12;
            
            const emi = principal * monthlyRate * Math.pow(1 + monthlyRate, months) / 
                       (Math.pow(1 + monthlyRate, months) - 1);
            
            const totalPayment = emi * months;
            const totalInterest = totalPayment - principal;

            document.getElementById('emi-result').textContent = `Your monthly EMI is ₹${emi.toFixed(2)}`;
            document.getElementById('emi-value').textContent = `₹${emi.toFixed(2)}`;
            document.getElementById('total-interest').textContent = `₹${totalInterest.toFixed(2)}`;
            document.getElementById('total-payment').textContent = `₹${totalPayment.toFixed(2)}`;
            document.getElementById('emi-details').classList.remove('hidden');
        }

        function calculateBMI() {
            // BMI calculation logic
        }

        function calculateGST() {
            // GST calculation logic
        }

        // Initialize the interface
        updateToolInterface();
    </script>
